{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
        "paths": {
            "Components": ["Components/*"],
            "Primitives/*": ["Primitives/*"],
            "Utils/*": ["Utils/*"]
        },
		"downlevelIteration": true,
        "lib": ["dom", "es2018"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}